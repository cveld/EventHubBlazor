@page "/eventrunner"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary md-4" @onclick="SendEvents">Send events</button>
<button class="btn btn-primary md-4" @onclick="AddReceiver">Add receiver</button>

<div>
    @result
</div>

@foreach (var c in receiverComponents)
{
    <EventReceiverComponent @key="c" OnRemoveCallback="@(() => RemoveReceiver(c))"></EventReceiverComponent>
}

