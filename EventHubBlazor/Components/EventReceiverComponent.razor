<h3>EventReceiverComponent</h3>

<div class="row">
    <div class="col-md-4">
        <button class="btn btn-primary md-4" @onclick="OnRemoveCallback">Remove</button>
        @switch (started)
        {
            case RunningStateEnum.Stopped:
                <button class="btn btn-primary md-4" @onclick="Start">Start</button>
                break;
            case RunningStateEnum.Starting:
                <button class="btn btn-primary md-4" disabled>Starting</button>
                break;
            case RunningStateEnum.Started:
                <button class="btn btn-primary md-4" @onclick="Stop">Stop</button>
                break;
            case RunningStateEnum.Stopping:
                <button class="btn btn-primary md-4" disabled>Stopping</button>
                break;

        }       
        <button class="btn btn-primary md-4" @onclick="Clear">Clear</button>
    </div>
    <div class="col-md-8">
        @foreach (var s in result)
        {
            @s<br />
        }        
    </div>
</div>
